#!/bin/sh

set -o errexit -o nounset

GIT_ROOT=${GIT_ROOT:-$(git rev-parse --show-toplevel)}

. ${GIT_ROOT}/make/include/versioning

ARTIFACT=hcp-${APP_VERSION}.zip

FILES=""
for base in hcf-hcp hcf-hcp-instance hcf-hcp-instance-ha ; do
    for num in "" .3 .6 ; do
        FILES="${FILES} ${base}${num}.json"
    done
done

zip -9 ${GIT_ROOT}/${ARTIFACT} ${FILES}

echo Generated ${ARTIFACT}
