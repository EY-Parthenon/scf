#!/bin/sh

set -o errexit -o nounset

GIT_ROOT=${GIT_ROOT:-$(git rev-parse --show-toplevel)}

stampy ${GIT_ROOT}/hcf_metrics.csv run vagrant.json-start
${GIT_ROOT}/make/generate vagrant
stampy ${GIT_ROOT}/hcf_metrics.csv run vagrant.json-done

stampy ${GIT_ROOT}/hcf_metrics.csv run start
${GIT_ROOT}/bin/run.sh
stampy ${GIT_ROOT}/hcf_metrics.csv run done

rm ${GIT_ROOT}/vagrant.json
