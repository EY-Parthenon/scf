---
name: volume-register

description: This job will create an instance of local volume persistent storage.

packages:
  - cli
  - ruby-2.3
  - service-registration-utils

templates:
  run.erb: bin/run

properties:
  cc.srv_api_uri:
    description: Local volume persistence endpoint
  localbroker.service-name:
    description: Name that localbroker uses
  localbroker.service-id:
    description: GUID id of the localbroker
  localbroker.plan-id:
    description: GUID id of the plan used by localbroker
  localbroker.password:
    description: password to connect to the localvolume
  localbroker.username:
    description: username to connect to the localvolume
    default: admin
  localbroker.port:
    description: port for the localbroker to listen on
    default: 8999
  hcf.uaa.internal-url:
    description: URL to UAA that can be accessed before the cluster's domain is setup
  ssl.skip_cert_verify:
    description: True for insecure connections
  uaa.clients.hcf_auto_config.secret:
    description: The secret for the UAA client to set up SSO service
