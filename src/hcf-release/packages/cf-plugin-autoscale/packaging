set -e -x

REPO_NAME=github.com/hpcloud/cf-plugin-autoscale

REPO_DIR=${BOSH_INSTALL_TARGET}/src/${REPO_NAME}

mkdir -p $(dirname $REPO_DIR)

cp -a $REPO_NAME/ $REPO_DIR

export GOROOT=$(readlink -nf /var/vcap/packages/golang1.6)
export GOPATH=$BOSH_INSTALL_TARGET:${REPO_DIR}/vendor
export PATH=$GOROOT/bin:$PATH

cd ${REPO_DIR}
go build -a

mkdir ${BOSH_INSTALL_TARGET}/bin

cp cf-plugin-autoscale ${BOSH_INSTALL_TARGET}/bin/
